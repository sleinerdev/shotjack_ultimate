{
  "name": "shotjack-ultimate",
  "version": "1.0.0",
  "description": "ShotJack Ultimate - Le meilleur du blackjack à gorgées",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm --prefix frontend run dev",
    "dev:backend": "npm --prefix backend start",
    "build": "npm --prefix frontend run build",
    "start": "npm --prefix backend start",
    "install:all": "npm install && npm --prefix frontend install && npm --prefix backend install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
